<h1>users#show</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<%= render 'follow_form' %>
<%= render 'stats' %>

<h2>ユーザーの投稿一覧</h2>
<% @user.papers.each do |t| %>  
  <U><B><br><%= t.user.email %></B></U>
  <br><B>Title</B>:<%= t.title %>
  <br><B>Author</B>:<%= t.author %>
  <br><B>Year</B>:<%= t.year %>
  <br><B>Journal</B>:<%= t.journal %>
  <br><B>Subject</B>:<%= t.subject %>
  <br><B>Purpose</B>:<%= t.purpose %>
  <br><B>Method</B>:<%= t.method %>
  <br><B>Result</B>:<%= t.result %>
<% end %>


<%= link_to "Tweet一覧に戻る", papers_path %>